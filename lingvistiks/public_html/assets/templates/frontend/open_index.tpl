<script>
	$(function() {
		$('.sky-carousel').carousel({
			itemWidth: 165,
			itemHeight: 190,
			distance: 0,
			selectedItemDistance: 0,
			selectedItemZoomFactor: 1.0,
			unselectedItemZoomFactor: 1.0,
			unselectedItemAlpha: 1.0,
			motionStartDistance: 150,
			topMargin: 30,
			gradientStartPoint: 0.36,
			gradientOverlayColor: "#f5f5f5",
			gradientOverlaySize: 190,
			selectByClick: true
		});

		$(".change_reg").on('click',function() {
			var this_type = $(this).attr("data-type");
			if(this_type == 1) {
				$(".change_group_register li").first().find("a").trigger('click');
			} else {
				$(".change_group_register li").last().find("a").trigger('click');
			}
		});
	});
</script>
